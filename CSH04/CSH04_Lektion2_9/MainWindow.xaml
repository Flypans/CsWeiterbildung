<Window x:Class="CSH04_Lektion2_9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSH04_Lektion2_9"
        mc:Ignorable="d"
        Title="ToolTip" Height="250" Width="400">
    <Button Width="100" Height="50">
        Beenden
        <Button.ToolTip>
            <StackPanel>
                <Label Foreground="Red">
                    Achtung!
                </Label>
                <TextBlock MaxWidth="200" TextWrapping="Wrap" Margin="10,10">
                        Mit dem Klicken auf den Button wird die Anwendung beendet. 
                        Nicht gespeicherte Inhalte gehen verloren 
                </TextBlock>
            </StackPanel>
        </Button.ToolTip>
    </Button>
    
</Window>
