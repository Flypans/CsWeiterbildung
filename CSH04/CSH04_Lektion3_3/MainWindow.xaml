<Window x:Class="CSH04_Lektion3_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSH04_Lektion3_3"
        mc:Ignorable="d"
        Title="StatusBar" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <StatusBar Grid.Row="3" Grid.ColumnSpan="2" Height="30">
            <Label Name="statusLabel" Width="400" Height="25" />
        </StatusBar>
    </Grid>
</Window>
